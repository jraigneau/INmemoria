.INwrap
  .INcolumnModal
    %img{:src => @hommage.urlImagePleine, :class=>"INimg-box" }/
    %p 
      = @hommage.nom
      - if @hommage.dateNaissance != ""
        ( #{@hommage.dateNaissance} - #{@hommage.dateDeces})
      - else
        (&#8224; #{@hommage.dateDeces})
    - unless @hommage.commentaires.empty?
      .INcommentaireModal
        %p
          = @hommage.commentaires

    %a{:href=>'/en-memoire-d-eux'}
      Retour

